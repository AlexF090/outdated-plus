{
  "name": "outdated-plus",
  "version": "1.3.0",
  "description": "Enhanced CLI tool to check npm outdated packages with publication dates, colored output, markdown format, and comprehensive package analysis",
  "main": "dist/index.js",
  "bin": {
    "outdated-plus": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "npm run build && vitest run",
    "test:watch": "npm run build && vitest",
    "build": "tsc -p tsconfig.json",
    "postinstall": "chmod +x dist/index.js || true",
    "start": "node dist/index.js",
    "dev": "tsc -w",
    "prepublishOnly": "npm run lint && npm run format:check && npm run test && npm run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format:check": "prettier --check src tests",
    "format:write": "prettier --write src tests",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:signatures": "npm audit signatures",
    "security:check": "npm run audit && npm run audit:signatures",
    "ci": "npm ci",
    "install:clean": "rm -rf node_modules package-lock.json && npm install",
    "outdated-plus": "npm run build && node dist/index.js",
    "outdated-plus:check-all": "npm run build && node dist/index.js --check-all"
  },
  "keywords": [
    "npm",
    "outdated",
    "dependencies",
    "cli",
    "dates",
    "package-management"
  ],
  "author": "AlexF090",
  "license": "Proprietary License - Use Only",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexF090/outdated-plus.git"
  },
  "bugs": {
    "url": "https://github.com/AlexF090/outdated-plus/issues"
  },
  "homepage": "https://github.com/AlexF090/outdated-plus#readme",
  "devDependencies": {
    "@types/node": "25.0.2",
    "@typescript-eslint/eslint-plugin": "8.49.0",
    "@typescript-eslint/parser": "8.49.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.7.4",
    "typescript": "5.9.3",
    "vitest": "4.0.15"
  }
}
