# NPM Security Best Practices Configuration
# Based on: https://github.com/bodadotsh/npm-security-best-practices

# Disable lifecycle scripts to prevent malicious code execution
ignore-scripts=true

# Pin dependency versions exactly (no caret/tilde)
save-exact=true

# Remove version prefixes to ensure exact versions
save-prefix=''

# Use npm audit signatures for verification
audit-level=moderate

# Enable strict peer dependencies
strict-peer-deps=true

# Use npm ci for faster, reliable builds
engine-strict=true
